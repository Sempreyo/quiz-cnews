					label.field.field--checkbox
						input.field__input(type='checkbox', name='rus-company', value='yadro')
						span.field__label Yadro (Ядро)
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='rus-company', value='kvadra')
						span.field__label Квадра
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='rus-company', value='graviton')
						span.field__label Гравитон
						b
					label.field.js-toggle-field
						span.field__label Другое
						input.field__input(type='text', name='other', placeholder='Введите название компании')
					label.field.field--checkbox.js-reset-fields
						input.field__input(type='checkbox', name='so_hard', value='Затрудняюсь ответить')
						span.field__label Затрудняюсь ответить
						b
			.quiz__step.quiz__step--5(data-name="nadezhnaya", data-step="step-3")
				.quiz__title Оцените, каким компаниям российских производителей компьютерной техники лучше всего подходят следующие характеристики?
				.quiz__subtitle Вы можете выбрать несколько компаний для одной характеристики, либо не отметить ни одной компании.
				.quiz__type Надежная
