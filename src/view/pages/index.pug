extends ../layouts/default

block vars
	-
		const page = {
			title: 'Стартовая страница'
		};

block main
	form.quiz(action='' method='post')
		.quiz__container.container
			.quiz__step.quiz__step--1.open
				.quiz__title Если говорить о российских производителях компьютерной техники, какие компании Вы знаете?
				.quiz__fields
					label.field.js-toggle-field.active
						span.field__label 1-я компания
						input.field__input(type='text', name='company-1', placeholder='Введите название компании')
					label.field.js-toggle-field
						span.field__label 2-я компания
						input.field__input(type='text', name='company-2', placeholder='Введите название компании')
					label.field.js-toggle-field
						span.field__label 3-я компания
						input.field__input(type='text', name='company-3', placeholder='Введите название компании')
					label.field.js-toggle-field.closed
						span.field__label 4-я компания
						input.field__input(type='text', name='company-4', placeholder='Введите название компании')
					label.field.js-toggle-field.closed
						span.field__label 5-я компания
						input.field__input(type='text', name='company-5', placeholder='Введите название компании')
					label.field.js-toggle-field.closed
						span.field__label 6-я компания
						input.field__input(type='text', name='company-6', placeholder='Введите название компании')
					label.field.js-toggle-field.closed
						span.field__label 7-я компания
						input.field__input(type='text', name='company-7', placeholder='Введите название компании')
			.quiz__step.quiz__step--2
				.quiz__title Каких российских производителей компьютерной техники, указанных ниже, Вы знаете? Пожалуйста, отметьте все компании, которые Вы знаете, даже те, которые указывали ранее. 
				.quiz__fields
					label.field.field--checkbox
						input.field__input(type='checkbox', name='aquarius')
						span.field__label Aquarius (Аквариус)
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='depo')
						span.field__label Depo (Депо)
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='f_plus')
						span.field__label F+ (Эф Плюс)
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='icl')
						span.field__label ICL (Ай Си Эл)
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='iru')
						span.field__label iRu (Ай Ру)
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='kraftway')
						span.field__label Kraftway (Крафтвэй)
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='yadro')
						span.field__label Yadro (Ядро)
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='kvadra')
						span.field__label Квадра
						b
					label.field.field--checkbox
						input.field__input(type='checkbox', name='graviton')
						span.field__label Гравитон
						b
					label.field.js-toggle-field
						span.field__label Другое
						input.field__input(type='text', name='other', placeholder='Введите название компании')
					label.field.field--checkbox.js-reset-fields
						input.field__input(type='checkbox', name='so_hard')
						span.field__label Затрудняюсь ответить
						b
			.quiz__step.quiz__step--3
				.quiz__title Оцените, каким компаниям российских производителей компьютерной техники лучше всего подходят следующие характеристики?
				.quiz__subtitle Вы можете выбрать несколько компаний для одной характеристики, либо не отметить ни одной компании.
				.quiz__type Надежная
				.quiz__fields.js-selected-fields
			button.quiz__next.button Больше не знаю

block scripts
	
